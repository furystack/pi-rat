{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "TorrentConfig": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "TORRENT_CONFIG"
        },
        "value": {
          "type": "object",
          "properties": {
            "torrentDriveLetter": {
              "type": "string"
            },
            "torrentPath": {
              "type": "string"
            }
          },
          "required": [
            "torrentDriveLetter",
            "torrentPath"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "value"
      ],
      "additionalProperties": false
    },
    "OmdbConfig": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "OMDB_CONFIG"
        },
        "value": {
          "type": "object",
          "properties": {
            "apiKey": {
              "type": "string"
            }
          },
          "required": [
            "apiKey"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "value"
      ],
      "additionalProperties": false
    },
    "IotConfig": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "IOT_CONFIG"
        },
        "value": {
          "type": "object",
          "properties": {
            "pingIntervalMs": {
              "type": "number",
              "description": "The interval in milliseconds at which to ping all IOT devices to check their availability. Defaults to 120000 (2 minutes)."
            }
          },
          "required": [
            "pingIntervalMs"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "value"
      ],
      "additionalProperties": false
    },
    "GithubConfig": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "GITHUB_CONFIG"
        },
        "value": {
          "type": "object",
          "properties": {
            "clientId": {
              "type": "string"
            },
            "clientSecret": {
              "type": "string"
            }
          },
          "required": [
            "clientId",
            "clientSecret"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "value"
      ],
      "additionalProperties": false
    },
    "ConfigType": {
      "anyOf": [
        {
          "$ref": "#/definitions/OmdbConfig"
        },
        {
          "$ref": "#/definitions/GithubConfig"
        },
        {
          "$ref": "#/definitions/TorrentConfig"
        },
        {
          "$ref": "#/definitions/IotConfig"
        }
      ]
    },
    "Config": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "enum": [
            "OMDB_CONFIG",
            "GITHUB_CONFIG",
            "TORRENT_CONFIG",
            "IOT_CONFIG"
          ]
        },
        "value": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "apiKey": {
                  "type": "string"
                }
              },
              "required": [
                "apiKey"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "clientId": {
                  "type": "string"
                },
                "clientSecret": {
                  "type": "string"
                }
              },
              "required": [
                "clientId",
                "clientSecret"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "torrentDriveLetter": {
                  "type": "string"
                },
                "torrentPath": {
                  "type": "string"
                }
              },
              "required": [
                "torrentDriveLetter",
                "torrentPath"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "pingIntervalMs": {
                  "type": "number",
                  "description": "The interval in milliseconds at which to ping all IOT devices to check their availability. Defaults to 120000 (2 minutes)."
                }
              },
              "required": [
                "pingIntervalMs"
              ],
              "additionalProperties": false
            }
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "value",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  }
}