{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AppShortcutWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "app-shortcut"
        },
        "appName": {
          "type": "string",
          "enum": [
            "home",
            "browser",
            "movies",
            "series",
            "torrents"
          ]
        }
      },
      "required": [
        "type",
        "appName"
      ],
      "additionalProperties": false
    },
    "ContinueWatchingWidgetGroup": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "continue-watching"
        },
        "count": {
          "type": "number"
        },
        "size": {
          "type": "number"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "EntityShortcutWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "entity-shortcut"
        },
        "entityName": {
          "type": "string",
          "enum": [
            "config",
            "dasboard",
            "drive",
            "user",
            "movie",
            "movie-file",
            "omdb-movie-metadata",
            "omdb-series-metadata",
            "device"
          ]
        }
      },
      "required": [
        "type",
        "entityName"
      ],
      "additionalProperties": false
    },
    "HtmlWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "html"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "MarkdownWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "markdown"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "MovieWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "movie"
        },
        "imdbId": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "index": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "imdbId"
      ],
      "additionalProperties": false
    },
    "SeriesWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "series"
        },
        "imdbId": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "index": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "imdbId"
      ],
      "additionalProperties": false
    },
    "WidgetGroup": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "group"
        },
        "title": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        }
      },
      "required": [
        "type",
        "title",
        "widgets"
      ],
      "additionalProperties": false
    },
    "Widget": {
      "anyOf": [
        {
          "$ref": "#/definitions/AppShortcutWidget"
        },
        {
          "$ref": "#/definitions/EntityShortcutWidget"
        },
        {
          "$ref": "#/definitions/HtmlWidget"
        },
        {
          "$ref": "#/definitions/MarkdownWidget"
        },
        {
          "$ref": "#/definitions/MovieWidget"
        },
        {
          "$ref": "#/definitions/SeriesWidget"
        },
        {
          "$ref": "#/definitions/WidgetGroup"
        },
        {
          "$ref": "#/definitions/ContinueWatchingWidgetGroup"
        }
      ]
    },
    "Dashboard": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "owner",
        "widgets",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  }
}