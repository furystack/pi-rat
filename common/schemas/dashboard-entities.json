{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AppShortcutWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "app-shortcut"
        },
        "appName": {
          "type": "string",
          "enum": [
            "home",
            "browser",
            "movies",
            "series",
            "torrents",
            "iot"
          ]
        }
      },
      "required": [
        "type",
        "appName"
      ],
      "additionalProperties": false
    },
    "ContinueWatchingWidgetGroup": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "continue-watching"
        },
        "count": {
          "type": "number"
        },
        "size": {
          "type": "number"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "EntityShortcutWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "entity-shortcut"
        },
        "entityName": {
          "type": "string",
          "enum": [
            "config",
            "dasboard",
            "drive",
            "user",
            "movie",
            "movie-file",
            "omdb-movie-metadata",
            "omdb-series-metadata",
            "device"
          ]
        }
      },
      "required": [
        "type",
        "entityName"
      ],
      "additionalProperties": false
    },
    "HtmlWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "html"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "DeviceAvailability": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "device-availability"
        },
        "deviceName": {
          "type": "string"
        },
        "enableWakeUp": {
          "type": "boolean"
        },
        "icon": {
          "$ref": "#/definitions/Icon"
        }
      },
      "required": [
        "type",
        "deviceName"
      ],
      "additionalProperties": false
    },
    "Icon": {
      "anyOf": [
        {
          "$ref": "#/definitions/FontIcon"
        },
        {
          "$ref": "#/definitions/Base64Icon"
        },
        {
          "$ref": "#/definitions/LottieIcon"
        },
        {
          "$ref": "#/definitions/UrlIcon"
        }
      ]
    },
    "FontIcon": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "font"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "value"
      ],
      "additionalProperties": false
    },
    "Base64Icon": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "base64"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "value"
      ],
      "additionalProperties": false
    },
    "LottieIcon": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "lottie"
        },
        "value": {
          "type": "object",
          "properties": {
            "autoplay": {
              "type": "boolean"
            },
            "src": {
              "type": "string"
            },
            "background": {
              "type": "string"
            },
            "controls": {
              "type": "boolean"
            },
            "count": {
              "type": "number"
            },
            "direction": {
              "type": "number"
            },
            "hover": {
              "type": "boolean"
            },
            "loop": {
              "type": "boolean"
            },
            "mode": {
              "type": "string"
            },
            "renderer": {
              "type": "string",
              "enum": [
                "svg",
                "canvas"
              ]
            },
            "speed": {
              "type": "number"
            },
            "style": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "src"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "type",
        "value"
      ],
      "additionalProperties": false
    },
    "UrlIcon": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "url"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "value"
      ],
      "additionalProperties": false
    },
    "MarkdownWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "markdown"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "MovieWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "movie"
        },
        "imdbId": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "index": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "imdbId"
      ],
      "additionalProperties": false
    },
    "SeriesWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "series"
        },
        "imdbId": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "index": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "imdbId"
      ],
      "additionalProperties": false
    },
    "WidgetGroup": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "group"
        },
        "title": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        }
      },
      "required": [
        "type",
        "title",
        "widgets"
      ],
      "additionalProperties": false
    },
    "Widget": {
      "anyOf": [
        {
          "$ref": "#/definitions/AppShortcutWidget"
        },
        {
          "$ref": "#/definitions/EntityShortcutWidget"
        },
        {
          "$ref": "#/definitions/HtmlWidget"
        },
        {
          "$ref": "#/definitions/MarkdownWidget"
        },
        {
          "$ref": "#/definitions/MovieWidget"
        },
        {
          "$ref": "#/definitions/SeriesWidget"
        },
        {
          "$ref": "#/definitions/WidgetGroup"
        },
        {
          "$ref": "#/definitions/ContinueWatchingWidgetGroup"
        },
        {
          "$ref": "#/definitions/DeviceAvailability"
        }
      ]
    },
    "Dashboard": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "owner",
        "widgets",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  }
}