{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "HtmlWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "html"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "NamedParameters<typeof isHtmlWidget>": {
      "type": "object",
      "properties": {
        "widget": {
          "$ref": "#/definitions/Widget"
        }
      },
      "required": [
        "widget"
      ],
      "additionalProperties": false
    },
    "Widget": {
      "anyOf": [
        {
          "$ref": "#/definitions/AppShortcutWidget"
        },
        {
          "$ref": "#/definitions/MarkdownWidget"
        },
        {
          "$ref": "#/definitions/HtmlWidget"
        },
        {
          "$ref": "#/definitions/WidgetGroup"
        }
      ]
    },
    "AppShortcutWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "app-shortcut"
        },
        "appName": {
          "type": "string",
          "enum": [
            "home",
            "browser"
          ]
        },
        "icon": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "appName",
        "icon",
        "title"
      ],
      "additionalProperties": false
    },
    "MarkdownWidget": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "markdown"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false
    },
    "WidgetGroup": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "group"
        },
        "title": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        }
      },
      "required": [
        "type",
        "title",
        "widgets"
      ],
      "additionalProperties": false
    },
    "NamedParameters<typeof isMarkdownWidget>": {
      "type": "object",
      "properties": {
        "widget": {
          "$ref": "#/definitions/Widget"
        }
      },
      "required": [
        "widget"
      ],
      "additionalProperties": false
    },
    "NamedParameters<typeof isWidgetGroup>": {
      "type": "object",
      "properties": {
        "widget": {
          "$ref": "#/definitions/Widget"
        }
      },
      "required": [
        "widget"
      ],
      "additionalProperties": false
    },
    "NamedParameters<typeof isAppShortcutWidget>": {
      "type": "object",
      "properties": {
        "widget": {
          "$ref": "#/definitions/Widget"
        }
      },
      "required": [
        "widget"
      ],
      "additionalProperties": false
    },
    "Dashboard": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "owner",
        "widgets",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  }
}