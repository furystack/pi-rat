              "type": "object",
              "properties": {
                "$in": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "$nin": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "letter": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "$regex": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "$eq": {
                  "type": "string"
                },
                "$ne": {
                  "type": "string"
                }
              },
              "additionalProperties": false
