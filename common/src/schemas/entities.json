{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Drive": {
      "type": "object",
      "properties": {
        "physicalPath": {
          "type": "string"
        },
        "letter": {
          "type": "string"
        }
      },
      "required": [
        "physicalPath",
        "letter"
      ],
      "additionalProperties": false
    },
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "username",
        "roles"
      ],
      "additionalProperties": false
    },
    "ServiceStatus": {
      "type": "string",
      "enum": [
        "installed",
        "needsInstall"
      ]
    }
  }
}