{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DirectoryEntry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "isFile": {
          "type": "boolean"
        },
        "isDirectory": {
          "type": "boolean"
        },
        "isBlockDevice": {
          "type": "boolean"
        },
        "isCharacterDevice": {
          "type": "boolean"
        },
        "isSymbolicLink": {
          "type": "boolean"
        },
        "isFIFO": {
          "type": "boolean"
        },
        "isSocket": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "isFile",
        "isDirectory",
        "isBlockDevice",
        "isCharacterDevice",
        "isSymbolicLink",
        "isFIFO",
        "isSocket"
      ],
      "additionalProperties": false
    },
    "Drive": {
      "type": "object",
      "properties": {
        "physicalPath": {
          "type": "string",
          "description": "The physical path that will be mounted to the drive letter"
        },
        "letter": {
          "type": "string",
          "description": "The drive letter, should be unique"
        },
        "createdAt": {
          "type": "string",
          "description": "The drive creation date",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Last update date",
          "format": "date-time"
        }
      },
      "required": [
        "physicalPath",
        "letter",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    },
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "username",
        "roles"
      ],
      "additionalProperties": false
    },
    "ServiceStatus": {
      "type": "string",
      "enum": [
        "installed",
        "needsInstall"
      ]
    }
  }
}